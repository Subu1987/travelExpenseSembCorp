<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Filter" class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer">
		<Panel>
			<content>
				<!-- Add input fields for filter criteria -->
				<FlexBox>
					<Select id="filterBy" selectedKey="" class="round">
						<items>
							<core:Item text="Filter By" key=""/>
							<core:Item text="Trip No" key="Trip No"/>
							<core:Item text="Traveller Name" key="Traveller Name"/>
							<core:Item text="Start Date" key="Start Date"/>
							<core:Item text="End Date" key="End Date"/>
							<core:Item text="From" key="From"/>
							<core:Item text="To" key="To"/>
						</items>
					</Select>
					<Select id="condition" selectedKey="" class="round">
						<items>
							<core:Item text="Condition By" key=""/>
							<core:Item text="Constains" key="Constains"/>
							<core:Item text="Between" key="Between"/>
							<core:Item text="Start with" key="Start with"/>
							<core:Item text="End with" key="End with"/>
							<core:Item text="Less than" key="Less than"/>
							<core:Item text="Greater than" key="Greater than"/>
						</items>
					</Select>
				</FlexBox>
			</content>
		</Panel>
		<beginButton>
			<Button text="OK" press="handleFilterDialogOK" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="handleFilterDialogCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>